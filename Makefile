brew-install:
	@echo "======================================================"
	@echo "Mongodb: Reinstall"
	@echo "======================================================"
	brew reinstall mongodb
	@echo "======================================================"
	@echo "Mongodb: Version"
	@echo "======================================================"
	mongo --version
	@echo "======================================================"
	@echo "Mongodb: Service Restart"
	@echo "======================================================"
	brew services restart mongo
	@echo "======================================================"
	@echo "Node: Reinstall"
	@echo "======================================================"
	brew reinstall node
	@echo "======================================================"
	@echo "Node: Version"
	@echo "======================================================"
	node --version
	@echo "======================================================"
	@echo "npm: Version"
	@echo "======================================================"
	npm version
	@echo "======================================================"
	@echo "brew: list"
	@echo "======================================================"
	brew list

list:
	@echo "======================================================"
	@echo list targets
	@echo "======================================================"
	cat Makefile | grep "^[a-z]" | awk '{print $$1}' | sed "s/://g" | sort